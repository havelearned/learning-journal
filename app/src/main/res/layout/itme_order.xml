<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/login_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="10"
                android:background="@drawable/ic_baseline_clear_24"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="登录注册享受更多精彩内容" />


        <EditText
            android:id="@+id/view_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:layout_marginRight="120sp"
            android:gravity="center"
            android:hint="手机号"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/view_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="120sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:hint="验证码"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/view_getcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:layout_gravity="center"
                android:text="获取验证码" />
        </LinearLayout>

        <Button
            android:id="@+id/view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="登录" />

        <TextView
            android:id="@+id/to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="其他方式登录" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="登录代表你同意"
            android:layout_weight="2"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/login_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:text="用户协议，隐私政策，和天翼账号认证服务协议"
            android:textColor="#03A9F4" />
    </LinearLayout>

</LinearLayout>